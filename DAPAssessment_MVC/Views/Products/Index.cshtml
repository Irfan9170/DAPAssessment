@model IEnumerable<DAPAssessment_MVC.Models.ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<h1>Product List</h1>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Category</td>
            </tr>
        }
    </tbody>
</table>
